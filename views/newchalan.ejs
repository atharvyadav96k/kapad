<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap Left Navigation Bar with Mobile Toggle and Search Bar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <style>
        .active {
            background: blue;
            border-radius: 20px;
            color: white;
        }
    </style>
    <div class="container">
        <div style="padding-left: 10px; padding-top: 10px;">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link active" href="/new-chalan">New Chalan</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/chalan-list">Chalan List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/parti-master">Parti Master</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/inventory-master">Inventory Master</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/authorize-user">Authorize User</a>
                </li>
            </ul>
        </div>
        <div class="container my-5">
            <h2 class="mb-4">Add Details</h2>
            <form id="form">
                <!-- Party Name -->
                <div class="mb-3">
                    <label for="partyName" class="form-label">Party Name</label>
                    <input type="text" class="form-control" id="partyName" placeholder="Enter Party Name" required>
                </div>

                <!-- Chalan No -->
                <div class="mb-3" >
                    <label for="chalanNo" class="form-label" readon>Chalan No</label>
                    <input readonly type="number" class="form-control" id="chalanNo" placeholder="Enter Chalan Number" required>
                </div>

                <!-- Bale No -->
                <div class="mb-3">
                    <label for="baleNo" class="form-label">Bale No</label>
                    <input type="number" class="form-control" id="baleNo" placeholder="Enter Bale Number" required>
                </div>

                <!-- Date -->
                <div class="mb-3">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" class="form-control" id="date" required>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script>
        const data = async function () {
            const response = await fetch('/getChalanNo');
            if (response.ok) {
                const result = await response.json();
                console.log(result.data.count);
                document.getElementById('chalanNo').removeAttribute('readonly');
                document.getElementById('chalanNo').value = result.data.count
            } else {
                console.error("Failed to fetch Chalan No");
            }
        }
        data();
    </script>
</body>

</html>