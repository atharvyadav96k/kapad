<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Data Display with Search</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .nav-link {
            font-size: 1.1rem;
            padding: 10px 15px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .nav-link:hover {
            background-color: #0056b3;
            color: white;
            border-radius: 10px;
        }

        .active {
            background-color: blue;
            border-radius: 10px;
            color: white !important;
        }

        .search-box {
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ced4da;
        }

        .list-group-item {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .list-group-item:hover {
            transform: scale(1.02);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        @media (max-width: 768px) {
            .nav-link {
                font-size: 1rem;
            }

            .search-box {
                font-size: 0.9rem;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="mt-3">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link" href="/new-chalan">New Chalan</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/chalan-list">Chalan List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/parti-master">Parti Master</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/inventory-master">Inventory Master</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/authorize-user">Authorize User</a>
                </li>
            </ul>
        </div>

        <div class="mt-4">
            <input type="text" id="searchInput" class="form-control search-box"
                placeholder="Search by '@Party Name' or 'Chalan No'">
        </div>

        <ul class="list-group mt-3" id="dataList">
            <% data.forEach(item => { %>
                <a href="/chalan-view/<%= item._id %>" style="text-decoration: none;">
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <div>
                                <strong>Party Name:</strong> <span class="party-name"><%= item.partyName %></span><br>
                                <strong>Chalan No:</strong> <span class="chalan-no"><%= item.chalanNo %></span><br>
                                <strong>Bale No:</strong> <%= item.baleNo %>
                            </div>
                            <div class="text-end">
                                <strong>Date:</strong> <%= new Date(item.date).toLocaleDateString() %><br>
                                <strong>Year:</strong> <%= item.year %>
                            </div>
                        </div>
                    </li>
                </a>
            <% }) %>
        </ul>
    </div>

    <script>
        // JavaScript for conditional filtering by Party Name or Chalan No
        document.getElementById('searchInput').addEventListener('input', function () {
            const filter = this.value.toLowerCase();
            const items = document.querySelectorAll('#dataList .list-group-item');

            items.forEach(item => {
                const partyName = item.querySelector('.party-name').textContent.toLowerCase();
                const chalanNo = item.querySelector('.chalan-no').textContent.toLowerCase();

                // Check if the filter starts with '@' to search by Party Name
                if (filter.startsWith('@')) {
                    const searchTerm = filter.slice(1);
                    item.style.display = partyName.includes(searchTerm) ? '' : 'none';
                } else {
                    item.style.display = chalanNo.includes(filter) ? '' : 'none';
                }
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>
