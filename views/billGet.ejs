<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/style/dashboard.css">
    <link rel="stylesheet" href="/style/color.css">
    <link rel="stylesheet" href="/style/pie.css">
    <link rel="stylesheet" href="/style/style.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
        .link {
            text-decoration: none;
            display: inline-block;
            width: 100%;
            height: 100%;
        }
    </style>
</head>

<body class="bg-dark text-light">
    <div class="container">
        <aside class="sidebar bg-primary">
            <div class="logo">
                <h2>Manage Business</h2>
            </div>
            <nav class="nav">
                <ul>
                    <li class="option-icon opacity50">
                        <i><img src="/imgs/four-squares-icon.svg" alt=""></i>
                        <a href="/dashboard" class="text-light2">Dashboard</a>
                    </li>
                    <li class="option-icon">
                        <i><img src="/imgs/young-businessman-icon.svg" alt=""></i>
                        <a href="/party" class="text-light active">Parties</a>
                    </li>
                    <li class="option-icon opacity50">
                        <i><img src="/imgs/qr-code-scan-icon.svg" alt=""></i>
                        <a href="/barcode" class="text-light2">Barcode</a>
                    </li>
                    <li class="option-icon opacity50">
                        <i><img src="/imgs/group-icon.svg" alt=""></i>
                        <a href="/users" class="text-light2">Display users and verify</a>
                    </li>
                    <li class="option-icon opacity50">
                        <i><img src="/imgs/profile-protection-icon.svg" alt=""></i>
                        <a href="/activity" class="text-light2">Recent Login</a>
                    </li>
                </ul>
            </nav>
        </aside>

        <main class="main-content">
            <div class="profile"></div>
            <header class="header">
                <h1>Bill items</h1>
                <div class="insight-analyzer bg-light">
                    <h3 class="text-dark">Bill Manager</h3>
                    <p class="text-secondary">Stay updated with bills</p>
                </div>
            </header>
            <div>
                <script>
                    console.log(status);
                </script>
                <% if(status == 1) {  %>
                    <select name="billStatus" id="billStatus" style="padding: 7px 10px; border-radius: 30px;">
                        <option value="1" selected>Pending</option>
                        <option value="2">Complete</option>
                    </select>
                <% } else if(status == 2){ %>
                    <select name="billStatus" id="billStatus" style="padding: 7px 10px; border-radius: 30px;">
                        <option value="1">Pending</option>
                        <option value="2" selected>Complete</option>
                    </select>
                <% }else{ %>
                    <h2 class="text-warning">Draft</h6>
                <% } %>
            </div>
            
            <!-- Bill Table -->
            <section class="bill-section">
                <table class="bill-table">
                    <thead>
                        <tr style="width: 100%; height: 40px;">
                            <th>Item</th>
                            <th>Size</th>
                            <th>Count</th>
                            <th>Total</th>
                            <th style="text-align: right;">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach((ele, i) => { %>
                            <tr>
                                <td><a href="#" class="text-light link"><%= ele.name %></a></td>
                                <td><a href="#" class="text-light link"><%= ele.item.size %></a></td>
                                <td><a href="#" class="text-light link"><%= ele.item.count %></a></td>
                                <td><a href="#" class="text-light link"><%= ele.item.size * ele.item.count %>m</a></td>
                                <td style="text-align: right;">
                                    <button class="bg-danger" onclick="deleteItem(`/product/deleteSize/<%= id %>`, `<%= ele.name %>`, `<%= ele.item.size %>`)">Delete</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </section>
        </main>

        <script>
            const bStatus = document.getElementById("billStatus");
            const billId = `<%= id %>`;
            bStatus.addEventListener('change', async () => {
                try {
                    const selectedStatus = bStatus.value;
                    console.log(selectedStatus)
                    const response = await axios.post(`/bill/status/${billId}`, { status: selectedStatus });
                    if (response.status === 200) {
                        alert("Status changed successfully");
                    }
                } catch (err) {
                    console.error("Something went wrong:", err);
                    alert("Something went wrong");
                }
            });
            async function deleteItem(url, name, size){
                try{
                    const data = await axios.post(url, {name, size});
                    if(data.status == 200){
                        console.log(data.data);
                        window.location.reload();
                    }
                }catch(err){
                    alert(err.message)
                }
            }
        </script>
    </div>
</body>

</html>
